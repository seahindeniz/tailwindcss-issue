{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["esnext", "dom", "dom.iterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "outDir": "dist/",
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es5",
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "include": ["./src"]
}
